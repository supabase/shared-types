{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "src",
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["es2020", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./out",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2019"
  },
  "include": ["./src/**/*"]
}
